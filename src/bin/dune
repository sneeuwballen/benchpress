(executable
 (name benchpress_bin)
 (public_name benchpress)
 (package benchpress)
 (modes native)
 (promote
  (into ../..)
  (until-clean))
 (libraries benchpress containers cmdliner result uuidm logs logs.cli
   sqlite3_utils base64)
 (flags :standard -warn-error -a+8 -safe-string -open Benchpress))

(rule
 (with-stdout-to
  benchpress.1
  (run ./benchpress_bin.exe --help=groff)))

(rule
 (with-stdout-to
  benchpress-run.1
  (run ./benchpress_bin.exe run --help=groff)))

(install
 (section man)
 (package benchpress)
 (files benchpress.1 benchpress-run.1))
